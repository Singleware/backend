{
  "author": {
    "name": "Silas B. Domingos",
    "email": "hello@balmante.eti.br",
    "url": "https://balmante.eti.br"
  },
  "name": "@singleware/backend",
  "description": "Singleware backend project package.",
  "license": "MIT",
  "version": "1.1.12",
  "main": "release/source/index.js",
  "types": "release/types/index.d.ts",
  "keywords": [
    "backend application",
    "empty backend project"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/singleware/backend"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@singleware/application": "^1.1.9",
    "@singleware/class": "^1.1.19",
    "@singleware/observable": "^1.0.21"
  },
  "devDependencies": {
    "@types/node": "^10.12.23",
    "prettier": "^1.16.4",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "scripts": {
    "build": "npm run make && npm run update",
    "make": "tsc",
    "update": "npm run update-base && npm run update-handlers && npm run update-services && npm run update-security",
    "update-base": "cp -Rf ./source/*.d.ts ./release/types",
    "update-services": "npm run update-services-base && npm run update-services-request && npm run update-services-response",
    "update-services-base": "cp -Rf ./source/services/*.d.ts ./release/types/services",
    "update-services-request": "cp -Rf ./source/services/request/*.d.ts ./release/types/services/request",
    "update-services-response": "cp -Rf ./source/services/response/*.d.ts ./release/types/services/response",
    "update-security": "cp -Rf ./source/security/*.d.ts ./release/types/security",
    "update-handlers": "npm run update-handlers-file && npm run update-handlers-json",
    "update-handlers-file": "cp -Rf ./source/handlers/file/*.d.ts ./release/types/handlers/file",
    "update-handlers-json": "cp -Rf ./source/handlers/json/*.d.ts ./release/types/handlers/json"
  }
}
